{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatX Components Configuration",
  "description": "Configuration schema for ChatX component library (based on shadcn/ui)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The JSON Schema URI"
    },
    "style": {
      "type": "string",
      "enum": ["default", "new-york"],
      "description": "The style variant to use for components"
    },
    "tailwind": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string",
          "description": "Path to the Tailwind CSS config file"
        },
        "css": {
          "type": "string",
          "description": "Path to the global CSS file"
        },
        "baseColor": {
          "type": "string",
          "description": "The base color for components"
        },
        "cssVariables": {
          "type": "boolean",
          "description": "Whether to use CSS variables"
        },
        "prefix": {
          "type": "string",
          "description": "Prefix for CSS classes"
        }
      },
      "required": ["config", "css", "baseColor", "cssVariables"],
      "additionalProperties": false
    },
    "rsc": {
      "type": "boolean",
      "description": "Whether to use React Server Components"
    },
    "tsx": {
      "type": "boolean",
      "description": "Whether to use TypeScript JSX"
    },
    "iconLibrary": {
      "type": "string",
      "enum": ["lucide", "heroicons", "tabler"],
      "description": "The icon library to use"
    },
    "aliases": {
      "type": "object",
      "properties": {
        "utils": {
          "type": "string",
          "description": "Import alias for utils"
        },
        "components": {
          "type": "string",
          "description": "Import alias for components"
        },
        "ui": {
          "type": "string",
          "description": "Import alias for UI components"
        },
        "lib": {
          "type": "string",
          "description": "Import alias for lib"
        },
        "hooks": {
          "type": "string",
          "description": "Import alias for hooks"
        }
      },
      "required": ["utils", "components"],
      "additionalProperties": false
    }
  },
  "required": ["style", "tailwind", "rsc", "tsx", "aliases"],
  "additionalProperties": false
}