# ======================
# 超级管理员配置
# ======================
SUPER_ADMIN_EMAIL=admin@chatx.com
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=ChatX@Admin123!
SUPER_ADMIN_FULL_NAME=Super Administrator

# ======================
# MinIO 对象存储配置
# ======================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=chatx_minio
MINIO_SECRET_KEY=chatx_minio_password
MINIO_SECURE=false
MINIO_BUCKET=chatx-files

# ======================
# 向量数据库配置
# ======================
WEAVIATE_URL=http://localhost:8080

# ======================
# 图数据库配置
# ======================
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=chatx_neo4j_password

# ======================
# CORS 配置
# ======================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# ======================
# 文件上传配置
# ======================
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/json

# ======================
# 日志配置
# ======================
LOG_LEVEL=INFO
LOG_FILE=

# ======================
# 安全配置
# ======================
SECURITY_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=true

# ======================
# 监控配置
# ======================
METRICS_ENABLED=true
TRACING_ENABLED=false
APM_SERVICE_NAME=chatx-api
APM_ENVIRONMENT=development